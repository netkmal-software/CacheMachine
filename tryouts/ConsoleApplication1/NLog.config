<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="console" xsi:type="Console" layout="${date} | ${message}" />
    <target name="logfile" xsi:type="File" fileName="logs/${shortdate}.txt" layout="${logger} | ${date:format=yyyy-MM-dd HH\:mm\:ss.fff} | ${message}" />
    <target name="logfile-warn" xsi:type="File" fileName="logs/warns-${shortdate}.txt" layout="WARN: ${logger} | ${date:format=yyyy-MM-dd HH\:mm\:ss.fff} | ${message}" />
    <target name="logfile-error" xsi:type="File" fileName="logs/errors-${shortdate}.txt" layout="ERROR: ${logger} | ${date:format=yyyy-MM-dd HH\:mm\:ss.fff} | ${message}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="console" />
    <logger name="*" minlevel="Debug" maxlevel="Info" writeTo="logfile" />
    <logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="logfile-warn" />
    <logger name="*" minlevel="Error" maxlevel="Error" writeTo="logfile-error" />
  </rules>
</nlog>